# Hetzner Cloud API
HETZNER_CLOUD_API_TOKEN=your_cloud_api_token_here

# Hetzner Robot API (for dedicated servers, optional)
HETZNER_ROBOT_USER=your_robot_username
HETZNER_ROBOT_PASSWORD=your_robot_password

# Agent authentication
AGENT_SECRET=generate_a_random_secret_here

# Collection intervals (seconds)
COLLECT_INTERVAL=300
ANALYSIS_INTERVAL=3600
RECOMMENDATION_INTERVAL=86400

# Database
DATABASE_URL=sqlite+aiosqlite:///./data/infrascope.db

# Demo mode (set to true for testing without real Hetzner credentials)
DEMO_MODE=true
